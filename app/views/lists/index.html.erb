<div class="container mt-3">
  <h1>Yo what up. Here are your lists:</h1>
    <% @lists.each do |list| %>
      <div
        class="card-category mb-3"
        style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path("xdiiepjp66bbf91k1knb") %>)'
        >
        <%= link_to list.name, list_path(list), class: "text-decoration-none text-white"  %>
      </div>
    <% end %>
    <%= link_to 'Add a new list', new_list_path,
    class: "d-flex justify-content-center btn btn-primary btn-block text-muted text-center" %>
</div>




